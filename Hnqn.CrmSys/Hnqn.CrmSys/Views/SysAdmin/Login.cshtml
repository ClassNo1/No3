
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .container {
            height: 527px;
            background-image: url('../../Img/timg2KDGBLNU.jpg');
            text-align: center;
        }

        .g-wrap {
            height: 100%;
            width: 960px;
            margin: 0 auto;
            position: relative;
        }


        #LoginBox {
            width: 225px;
            position: absolute;
            z-index: 2;
            top: 200px;
            right: 50px;
            background: #fff;
            padding: 30px 30px 20px;
            border-radius: 10px;
            text-align: left;
            -webkit-box-shadow: 0 1px 6px rgba(0, 0, 0, .1);
            box-shadow: 0 1px 6px rgba(0, 0, 0, .1);
        }

            #LoginBox dl {
                margin: 0;
                padding: 8px 0;
                clear: both;
            }

                #LoginBox dl > dd {
                    width: 225px;
                    height: 40px;
                    margin: 0;
                    position: relative;
                }

        .r_input {
            position: relative;
            width: 200px;
            height: 28px;
            padding: 5px 5px 5px 13px;
            line-height: 28px;
            border: 1px solid #ccc;
            font-size: 14px;
            color: #333;
            display: inline-block;
            vertical-align: middle;
            border-radius: 5px;
        }

        #loginCode {
            width: 100px
        }

        .form_btn--block {
            width: 220px;
            height: 42px;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
            border: 0;
            border-radius: 4px;
            clear: both;
            background-color: peru;
        }

        .form_btn:hover {
            background-color: #CC7B10;
        }

        .CodeImg {
            margin-top: 1px;
            position: absolute;
            top: 8px;
            left: 144px;
        }
    </style>
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script>
        $(function () {
            $("#nsubmit").click(function () {
                //$.ajax({
                //    url: '/Home/Login',
                //    data: {
                //        Account: $("#Account").val(),
                //        LoginPwd: $("#LoginPwd").val(),
                //        Code: $("#loginCode").val()
                //    },
                //    type: 'post',
                //    dataType: 'json',
                //    success: function (data) {
                //        if (data.susser) {
                //            document.location = '/Home/Index';
                //        }
                //        else {
                //            alert('账号或密码错误');
                //        }
                //    }
                var Account = $("#Account").val();
                var LoginPwd = $("#LoginPwd").val();
                $.post('/SysAdmin/Login', { 'Account': Account, 'LoginPwd': LoginPwd }, function (data) {
                    if (data) {
                        document.location = '/Home/Index';
                    }
                    else {
                        alert('账号或密码错误');
                    }
                });
                })
                

        });
    </script>
</head>
<body>
    <form action="/SysAdmin/Login" method="post">
        <div class="container">
            <div class="g-wrap">
                <div id="LoginBox">
                    <dl>
                        <dd>
                            <input class="r_input" type="text" id="Account" name="Account" placeholder="请输入用户名" value="@ViewBag.Account">
                        </dd>
                    </dl>
                    <dl>
                        <dd>
                            <input class="r_input" type="password" id="LoginPwd" name="LoginPwd" placeholder="请输入登录密码" value="@ViewBag.LoginPwd">
                        </dd>
                    </dl>
                    <dl>
                        <dd>
                            <input class="r_input" type="text" id="loginCode" name="loginCode" placeholder="请输入验证码">
                            <img src="/SysAdmin/GetCodeImg?id=0.111565465" class="CodeImg" />
                        </dd>
                    </dl>
                    <div class="login-set">
                        <label class="auto-login">
                            <input checked="checked" id="rember" type="checkbox">记住密码
                        </label>
                    </div>
                    <dl>
                        <dd>
                            <input class="form_btn form_btn--block" id="nsubmit" value="登  录" />
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
