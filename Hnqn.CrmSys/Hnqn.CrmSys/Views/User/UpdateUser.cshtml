

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateUser</title>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.all.js"></script>
    <script src="~/layui/layui.js"></script>
</head>
<body>
    <form class="layui-form" action="">

        <div class="layui-form-item" style="margin-bottom: 6px;">
            <label class="layui-form-label">用户类型</label>
            <div class="layui-input-block">
                <input type="checkbox" name="like[write]" title="校长">
                <input type="checkbox" name="like[read]" title="主任">
                <input type="checkbox" name="like[game]" title="教师">
            </div>
        </div>


        <div class="layui-form-item" style="margin-bottom: 6px;">
            <label class="layui-form-label">管理校区</label>
            <div class="layui-input-block" style="width:160px;">
                <select name="interest" lay-filter="aihao">
                    <option value="">财经学院</option>
                    <option value="0">师范大学</option>
                    <option value="1">南华大学</option>
                    <option value="2">湖南工学院</option>
                    <option value="3">职业技工学校</option>
                    <option value="4">广州大学</option>
                </select>
            </div>
        </div>


        <div class="layui-form-item" style="margin-bottom: 6px;">
            <label class="layui-form-label">真实姓名</label>
            <div class="layui-input-block">
                <input type="text" id="txtHead" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input" style="width:190px">
            </div>
            <div class="layui-input-block">
                <input type="radio" name="sex" value="男" title="男" checked="">
                <input type="radio" name="sex" value="女" title="女">
            </div>
        </div>

        <div class="layui-form-item" style="margin-bottom: 6px;">
            <label class="layui-form-label">手机号码</label>
            <div class="layui-input-block">
                <input type="text" id="txtHead" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input" style="width:190px">
            </div>
        </div>


        <div class="layui-form-item" style="margin-bottom: 6px;">
            <label class="layui-form-label">登录日期</label>
            <div class="layui-input-inline">
                <input type="text" class="layui-input" id="test5" placeholder="yyyy-MM-dd HH:mm:ss">
            </div>
        </div>


        <div class="layui-form-item" style="margin-bottom: 6px;">
            <label class="layui-form-label">登录次数</label>
            <input type="text" id="txtHead" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input" style="width:80px">
        </div>


        <div class="layui-form-item" style="margin-bottom: 6px;">
            <div class="layui-input-block">
                <button id="btnSubmit" class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                <button id="btnReset" type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>

    <script>
        layui.use('form', function () {
            var form = layui.form;

            //监听提交
            form.on('submit(formDemo)', function (data) {
                layer.msg(JSON.stringify(data.field));
                return false;
            });
        });
    </script>
</body>
</html>
